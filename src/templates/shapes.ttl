@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix org: <http://www.w3.org/ns/org#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix schema: <https://schema.org/> .

# Shape to validate that each org:Organization has a non-empty rdfs:label
org:OrganizationLabelShape
    a sh:NodeShape ;
    sh:targetClass org:Organization ;
    sh:property [
        sh:path rdfs:label ;
        sh:minCount 1 ;
        sh:pattern "^.+$" ;  # Ensures the value is not an empty string
    ] .

# Shape to validate that each org:Organization has a non-empty schema:name
org:OrganizationNameShape
    a sh:NodeShape ;
    sh:targetClass org:Organization ;
    sh:property [
        sh:path schema:name ;
        sh:minCount 1 ;
        sh:pattern "^.+$" ;  # Ensures the value is not an empty string
    ] .

# Shape to validate that each org:Organization has a non-empty org:status
# and that the value is either 'active' or 'inactive'
org:OrganizationStatusShape
    a sh:NodeShape ;
    sh:targetClass org:Organization ;
    sh:property [
        sh:path org:status ;
        sh:minCount 1 ;
        sh:in (
            "active"^^xsd:string
            "inactive"^^xsd:string
        ) ;  # Restricts values to 'active' or 'inactive' with explicit datatype
    ] .